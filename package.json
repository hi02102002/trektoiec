{
	"name": "@trektoiec",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"@orpc/server": "^1.10.0",
			"@orpc/client": "^1.10.0",
			"@orpc/openapi": "^1.10.0",
			"@orpc/zod": "^1.10.0",
			"better-auth": "^1.4.5",
			"dotenv": "^17.2.2"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @trektoiec/db db:push",
		"db:studio": "turbo -F @trektoiec/db db:studio",
		"db:generate": "turbo -F @trektoiec/db db:generate",
		"db:migrate": "turbo -F @trektoiec/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"@types/node": "^22.13.11"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@9.15.2"
}

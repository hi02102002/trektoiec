{
	"name": "@trektoeic",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"@orpc/server": "^1.10.0",
			"@orpc/client": "^1.10.0",
			"@orpc/openapi": "^1.10.0",
			"@orpc/zod": "^1.10.0",
			"better-auth": "^1.4.5",
			"dotenv": "^17.2.2"
		}
	},
	"scripts": {
		"check": "biome check --write . --max-diagnostics 100",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @trektoeic/db db:push",
		"db:push:prod": "turbo -F @trektoeic/db db:push:prod",
		"db:studio": "turbo -F @trektoeic/db db:studio",
		"db:generate": "turbo -F @trektoeic/db db:generate",
		"db:migrate": "turbo -F @trektoeic/db db:migrate",
		"db:pull": "turbo -F @trektoeic/db db:pull",
		"dev:mailer": "turbo -F @trektoeic/mailer dev:mailer",
		"clean": "pnpm -r exec rm -rf node_modules .next dist build && rm -rf node_modules pnpm-lock.yaml",
		"reset": "pnpm run clean && pnpm store prune && pnpm install"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"dotenv-cli": "^11.0.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^22.13.11",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsx": "^4.21.0",
		"turbo": "^2.5.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@9.15.2"
}

{
	"name": "@trektoeic/api",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./*": {
			"default": "./src/*.ts"
		},
		"./polyfill": {
			"default": "./src/shared/polyfill.ts"
		},
		"./shared/*": {
			"default": "./src/shared/*.ts"
		},
		"./routers/*": {
			"default": "./src/routers/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"check-types": "tsc --noEmit"
	},
	"devDependencies": {
		"@trektoeic/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@orpc/client": "catalog:",
		"@orpc/json-schema": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"@orpc/experimental-pino": "catalog:",
		"@trektoeic/auth": "workspace:*",
		"@trektoeic/db": "workspace:*",
		"@trektoeic/env": "workspace:*",
		"@trektoeic/logger": "workspace:*",
		"@trektoeic/utils": "workspace:*",
		"zod": "^4.1.11"
	}
}

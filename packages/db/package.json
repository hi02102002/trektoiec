{
	"name": "@trektoeic/db",
	"type": "module",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./kysely": {
			"default": "./src/kysely.ts"
		},
		"./*": {
			"default": "./src/*.ts"
		},
		"./schema/*": {
			"default": "./src/schema/*.ts"
		},
		"./queries/toeic-max-tokens/*": {
			"default": "./src/queries/toeic-max-tokens/*.ts"
		},
		"./queries/toeic-max-tokens": {
			"default": "./src/queries/toeic-max-tokens/index.ts"
		},
		"./queries": {
			"default": "./src/queries/index.ts"
		}
	},
	"scripts": {
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:pull": "drizzle-kit pull",
		"db:push:prod": "NODE_ENV=production drizzle-kit push",
		"check-types": "tsc --noEmit"
	},
	"devDependencies": {
		"@trektoeic/config": "workspace:*",
		"@types/pg": "^8.11.11",
		"drizzle-kit": "^0.31.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@trektoeic/env": "workspace:*",
		"@trektoeic/utils": "workspace:*",
		"drizzle-orm": "^0.44.2",
		"drizzle-orm-helpers": "^0.7.6",
		"kysely": "^0.28.8",
		"pg": "^8.14.1",
		"type-fest": "^5.3.1",
		"zod": "^4.1.11"
	}
}

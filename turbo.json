{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".output/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"db:pull": {
			"cache": false,
			"persistent": true
		},
		"dev:mailer": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"CORS_ORIGIN",
		"DATABASE_URL",
		"NODE_ENV",
		"CLOUDFLARE_BUCKET_NAME",
		"CLOUDFLARE_ACCOUNT_ID",
		"CLOUDFLARE_ACCESS_KEY_ID",
		"CLOUDFLARE_SECRET_ACCESS_KEY",
		"BACKBLAZE_BUCKET_NAME",
		"BACKBLAZE_APPLICATION_KEY_ID",
		"BACKBLAZE_APPLICATION_KEY",
		"BACKBLAZE_REGION",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"UNOSEND_API_KEY"
	]
}
